pico-8 cartridge // http://www.pico-8.com
version 18
__lua__

function _init()
    ticks = 0
    ship = {
        x = 60,
        y = 60,
        sprite = 1
    }
    bullets = {}
end

function handle_keys()
  if btn(0) and ship.x > 0 then
    ship.x = ship.x - 1
  elseif btn(1) and ship.x < 120 then
    ship.x = ship.x + 1
  elseif btn(2) and ship.y > 0 then
    ship.y = ship.y - 1
  elseif btn(3) and ship.y < 120 then
    ship.y = ship.y + 1
  end
end

function update_animations()
  if ticks % 6 < 3 then
    ship.sprite = 1
  else
      ship.sprite = 2
  end
end

function _update()
    ticks = ticks + 1
    update_animations()
    handle_keys()
end

function _draw()
    cls(black)
    spr(ship.sprite, ship.x, ship.y)
end

